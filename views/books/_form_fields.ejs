</fieldset>




<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
  </div>
  <div class="form-item">
    <label>Author</label>
    <select name="author">
      <% authors.forEach(author => { %>
       
        <% if (author.id == book.author) { %>
         
          <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
          <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Genre</label>
    <select name="genre">
      
      <% genres.forEach(genre => { %>
        <% if (genre == book.genre) { %>
          <option selected label="<%= genre %>" value="<%= genre %>">
            <% } else { %>
              <option label="<%= genre %>" value="<%= genre %>">
                <% } %>
      <% }) %>
    </select>
  </div>


   <div class="form-item">
    <label>Publisher</label>
    <input type="text" name="publisher"
    value="<%= book.publisher %>">     
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Published</label>
    <input type="date" name="publishDate"
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
         
  </div>
  <div class="form-item">
    <label>Pages</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Started Reading...</label>
    <input type="date" name="readStartDate"
  
    value="<%= book.readStartDate == null ? '' : book.readStartDate.toISOString().split('T')[0] %>">
         
  </div>
  <div class="form-item">
    <label>Ended Reading</label>
    <input type="date" name="readEndDate"
    value="<%= book.readEndDate == null ? '' : book.readEndDate.toISOString().split('T')[0] %>">
  </div>
</div>


<div class="form-row">
  <div class="form-item">
    <label>Original Title</label>
    <input type="text" name="genre"
    value="<%= book.originalTitle %>">
  </div>

  <div class="form-item">
    <label>Rating</label>
    <input type="text" name="test"
    value="<%= book.rating %>">
   
  </div>



  
 
</div>


<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Cover</label>
    <input type="file" name="cover" class="book-cover filepond">
  </div>
  <div class="form-item">
    <label>Review</label>
    <textarea name="description"><%= book.description %></textarea>
  </div>
</div>
  
